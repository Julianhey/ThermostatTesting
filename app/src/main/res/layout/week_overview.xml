<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:background="@drawable/background1920"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context="nl.tue.thermostattesting.WeekOverview">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/button_normal"
            android:text="Live"
            android:textColor="@color/MainWhite"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/thermostat_activity" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/button_activated"
            android:text="Schedule"
            android:textColor="@color/MainWhite"
            android:id="@+id/week_overview"

            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/fillView3" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textSize="20dp"
                android:id="@+id/dayView"
                android:background="#00000000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_up"
                    android:paddingRight="2dp"
                    android:background="#00000000"
                    android:id="@+id/bPlus" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:background="#00000000"
                    android:src="@drawable/arrow_up"
                    android:id="@+id/bPlus0.1"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="21.0 &#x2103;"
                android:textSize="30dp"
                android:background="#00000000"
                android:id="@+id/tempDay" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/arrow_down"
                    android:background="#00000000"
                    android:id="@+id/bMinus" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:src="@drawable/arrow_down"
                    android:background="#00000000"
                    android:id="@+id/bMinus0.1" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:id="@+id/fillView" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night"
                android:textSize="20dp"
                android:id="@+id/NightView"
                android:background="#00000000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_up"
                    android:paddingRight="2dp"
                    android:background="#00000000"
                    android:id="@+id/bPlusNight" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:background="#00000000"
                    android:src="@drawable/arrow_up"
                    android:id="@+id/bPlus0.1Night"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="21.0 &#x2103;"
                android:textSize="30dp"
                android:background="#00000000"
                android:id="@+id/tempNight" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000">



                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/arrow_down"
                    android:background="#00000000"
                    android:id="@+id/bMinusNight" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:paddingLeft="2dp"
                    android:src="@drawable/arrow_down"
                    android:background="#00000000"
                    android:id="@+id/bMinus0.1Night" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacation"
        android:id="@+id/Vacswitch"
        android:thumbTint="#ff7b00"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal" />

    <Button
            android:layout_width="338dp"
            android:layout_height="45dp"
            android:text="Monday"
            android:id="@+id/Mondaybutton"
            android:layout_alignParentEnd="true"
        android:textColor="@color/MainWhite"
        android:background="@drawable/back_to_schedule"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/CurrPrestextView" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:id="@+id/SwitchlistView"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"/>

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx:xx - xx:xx"
            android:id="@+id/timeBlock0"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#00000000"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fillblock1"
                android:layout_row="0"
                android:layout_column="1"
                android:text="   "
            android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock1"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:id="@+id/fillblock2"
                android:layout_row="0"
                android:layout_column="3"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock2"
                android:layout_row="0"
                android:layout_column="4"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/fillblock3"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock3"
                android:layout_row="2"
                android:layout_column="0"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock4"
                android:layout_row="2"
                android:layout_column="2"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock5"
                android:layout_row="2"
                android:layout_column="4"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/fillblock4"
                android:layout_row="3"
                android:layout_column="0"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock6"
                android:layout_row="4"
                android:layout_column="0"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock7"
                android:layout_row="4"
                android:layout_column="2"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock8"
                android:layout_row="4"
                android:layout_column="4"
                android:background="#00000000"/>
        </GridLayout>
    </LinearLayout>


