<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context="nl.tue.thermostattesting.WeekOverview">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacation mode  "
        android:id="@+id/Vacswitch"
        android:thumbTint="#ff7b00"
        android:checked="false"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Program Info"
        android:id="@+id/Programbutton"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Huehuehue"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NormalWeek"
        android:id="@+id/CurrPrestextView"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />
    <LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#D3D3D3"

    android:layout_marginTop="48dp"
    android:layout_below="@+id/CurrPrestextView"
    android:layout_alignParentStart="true">

    <Spinner
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:id="@+id/presetSpinner"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_alignParentStart="true" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:text="Set Preset"
        android:id="@+id/SetPresetButton"
        android:layout_above="@+id/Programbutton"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Programbutton"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Display week program and implement the switches here"
            android:id="@+id/dayView" />


    </LinearLayout>


</RelativeLayout>