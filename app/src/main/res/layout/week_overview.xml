<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context="nl.tue.thermostattesting.WeekOverview">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacation mode  "
        android:id="@+id/Vacswitch"
        android:thumbTint="#ff7b00"
        android:checked="false"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/WednesdayButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:id="@+id/Mondaybutton"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:id="@+id/TuesdayButton"
        android:layout_below="@+id/Mondaybutton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Mondaybutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:id="@+id/WednesdayButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TuesdayButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:id="@+id/ThursdayButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/WednesdayButton"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/WednesdayButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:id="@+id/FridayButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ThursdayButton"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/ThursdayButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MOARTESTING!"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NormalWeek"
        android:id="@+id/CurrPrestextView"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />
<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#D3D3D3"

    android:layout_marginTop="48dp"
    android:layout_below="@+id/CurrPrestextView"
    android:layout_alignParentStart="true">

    <Spinner
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:id="@+id/presetSpinner"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_alignParentStart="true" />
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:id="@+id/SaturdayButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/FridayButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:id="@+id/SundayButton"
        android:layout_below="@+id/SaturdayButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/SaturdayButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:text="Set Preset"
        android:id="@+id/SetPresetButton"
        android:layout_above="@+id/Mondaybutton"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_alignParentEnd="true" />


</RelativeLayout>