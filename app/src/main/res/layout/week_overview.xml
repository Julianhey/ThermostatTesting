<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"

android:gravity="center_horizontal"
android:orientation="vertical"
tools:context="nl.tue.thermostattesting.WeekOverview">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Live"
            android:textColor="@color/MainWhite"
            android:background="@color/MainDarkGrey"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/thermostat_activity" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Schedule"
            android:textColor="@color/MainWhite"
            android:id="@+id/week_overview"
            android:background="@color/MainDarkGrey"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vacation"
            android:id="@+id/Vacswitch"
            android:thumbTint="#ff7b00"
            android:checked="false"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                        "
            android:id="@+id/textView3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:text="Set Preset"
            android:id="@+id/SetPresetButton"
            android:layout_below="@+id/Vacswitch"
            android:layout_alignStart="@+id/Vacswitch" />
    </LinearLayout>

    <Button
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:id="@+id/Mondaybutton"
            android:layout_alignParentEnd="true"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/CurrPrestextView" />

        <Button
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:id="@+id/Tuesdaybutton"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:id="@+id/Wednesdaybutton"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:id="@+id/Thursdaybutton"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:id="@+id/Fridaybutton"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:id="@+id/Saturdaybutton"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:id="@+id/Sundaybutton"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock0"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fillblock1"
                android:layout_row="0"
                android:layout_column="1"
                android:text="   " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock1"
                android:layout_row="0"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:id="@+id/fillblock2"
                android:layout_row="0"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock2"
                android:layout_row="0"
                android:layout_column="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/fillblock3"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock3"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock4"
                android:layout_row="2"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock5"
                android:layout_row="2"
                android:layout_column="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/fillblock4"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock6"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock7"
                android:layout_row="4"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx - xx:xx"
                android:id="@+id/timeBlock8"
                android:layout_row="4"
                android:layout_column="4" />
        </GridLayout>
    </LinearLayout>


