<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="656px"
    android:layout_height="893px"
    android:background="@drawable/popup_bg"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Switch Settings"
        android:background="#00000000"
        android:textColor="@color/MainDarkGrey"
        android:fontFamily="sans-serif-bold"
        android:textSize="30dp"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:background="#00000000"
        android:paddingTop="10dp">

        <TextView
            android:paddingLeft="30px"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="Start       -:-"
            android:textSize="25dp"
            android:background="#00000000"
            android:id="@+id/startTime" />

        <TextView
            android:layout_width="114px"
            android:layout_height="80px"
            android:text="Set"
            android:gravity="center"
            android:textColor="@color/MainWhite"
            android:id="@+id/setBtnstart"
            android:background="@drawable/setbtn"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:paddingTop="10dp"
        android:background="#00000000"
        android:layout_gravity="center_horizontal">

        <TextView
            android:paddingLeft="30px"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="End         -:-"
            android:textSize="25dp"
            android:background="#00000000"
            android:id="@+id/endTime" />

        <TextView
            android:layout_width="114px"
            android:layout_height="80px"
            android:text="Set"
            android:gravity="center"
            android:textColor="@color/MainWhite"
            android:id="@+id/setBtnend"
            android:background="@drawable/setbtn"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:paddingTop="40dp"
        android:background="#00000000"
        android:layout_gravity="center_horizontal">

        <TextView
            android:paddingLeft="30px"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Type"
            android:background="#00000000"
            android:id="@+id/textView13" />

        <ToggleButton
            android:layout_width="69dp"
            android:layout_height="18dp"
            android:id="@+id/switch1"
            android:checked="true"
            android:textColor="#00000000"
            android:background="@drawable/day_night_switch"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginRight="5px"
        android:background="#00000000"
        android:layout_marginTop="50dp"

        android:layout_gravity="center">

        <TextView
            android:layout_width="249px"
            android:layout_height="99px"
            android:text="Save"
            android:layout_marginRight="26px"
            android:gravity="center"
            android:textColor="@color/MainWhite"
            android:id="@+id/saveButton"
            android:background="@drawable/save_cancelbtn"/>

        <TextView
            android:layout_width="249px"
            android:layout_height="99px"
            android:text="Cancel"
            android:layout_marginLeft="26px"
            android:gravity="center"
            android:textColor="@color/MainWhite"
            android:id="@+id/cancelButton"
            android:background="@drawable/save_cancelbtn"/>
    </LinearLayout>

</LinearLayout>