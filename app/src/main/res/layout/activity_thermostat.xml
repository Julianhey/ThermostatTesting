<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background1920"

android:orientation="vertical"
android:gravity="center_horizontal"

tools:context="nl.tue.thermostattesting.ThermostatActivity"
>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/button_activated"
            android:text="Live"
            android:textColor="@color/MainWhite"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/thermostat_activity" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/button_normal"
            android:text="Schedule"
            android:textColor="@color/MainWhite"
            android:id="@+id/week_overview"

            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/dayView"
        android:layout_gravity="center_horizontal"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-:-"
        android:id="@+id/timeView"
        android:layout_gravity="center_horizontal"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Target Temperature"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="    "
            android:background="#00000000"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_up"
            android:paddingRight="2dp"
            android:background="#00000000"
            android:id="@+id/bPlus" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:paddingLeft="2dp"
            android:background="#00000000"
            android:src="@drawable/arrow_up"
            android:id="@+id/bPlus0.1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="21.0 &#x2103;"
        android:textSize="30dp"
        android:background="#00000000"
        android:id="@+id/temp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="    "
            android:background="#00000000" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:paddingRight="2dp"
            android:src="@drawable/arrow_down"
            android:background="#00000000"
            android:id="@+id/bMinus" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:paddingLeft="2dp"
            android:src="@drawable/arrow_down"
            android:background="#00000000"
            android:id="@+id/bMinus0.1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/textView7"
        android:background="#00000000"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentTempView"
        android:text="Currently: - &#x2103;"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/textView8"
        android:background="#00000000"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/tempWarningView"
        android:background="#00000000"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/back_to_schedule"
        android:text="Back to schedule: - &#x2103;"
        android:id="@+id/ScheduleReturnButton"
        style="@style/button"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacation"
        android:id="@+id/Vacswitch"
        android:thumbTint="#ff7b00"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/FillViewbottom"
        android:background="#00000000"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next switch:"
        android:id="@+id/NextSwitch"
        android:layout_gravity="center_horizontal"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- at -:- to - &#x2103;"
        android:id="@+id/nextSwitchVal"
        android:background="#00000000"
        android:layout_gravity="center_horizontal" />
</LinearLayout>