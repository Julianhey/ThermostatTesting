<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"

android:orientation="vertical"
android:gravity="center_horizontal"

tools:context="nl.tue.thermostattesting.ThermostatActivity"
>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Live"
            android:textColor="@color/MainWhite"
            android:background="@color/MainDarkGrey"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/thermostat_activity" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Schedule"
            android:textColor="@color/MainWhite"
            android:id="@+id/week_overview"
            android:background="@color/MainDarkGrey"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/dayView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-:-"
        android:id="@+id/timeView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal" />

    <TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Current Temperature"
    android:textSize="20dp"
    android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30dp"
        android:id="@+id/bPlus"
        android:clickable="false"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/bPlus0.1"
            android:text="+"
            android:textSize="30dp" />
    </LinearLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="21.0 &#x2103;"
    android:textSize="30dp"

    android:id="@+id/temp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />

        <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30dp"
        android:id="@+id/bMinus" />

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/bMinus0.1"
            android:textSize="30dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temp warning here"
        android:id="@+id/tempWarningView"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Back to schedule: - &#x2103; (-)"
        android:id="@+id/ScheduleReturnButton"
        style="@style/button"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/FillViewbottom"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next switch:"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="At -:- to - &#x2103; (-)"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />

</LinearLayout>